{
  "version": 3,
  "constants": {
    "@land": "#eee",
    "@water": "#999",
    "@park": "#bda",
    "@road": "#fefefe",
    "@border": "#6d90ab",
    "@building": "#ddd",
    "@building_outline": "#ccc",
    "@text": "#000000",
    "@road_blur": 1,
    "@stroke_width": 0.25
  },
  "glyphs": "http://mapbox.s3.amazonaws.com/gl-glyphs-256/{fontstack}/{range}.pbf",
  "sources": {
    "mapbox.mapbox-streets-v5": {
      "type": "vector",
      "url": "mapbox://mapbox.mapbox-streets-v5",
      "tileSize": 512
    }
  },
  "layers": [{
    "id": "background",
    "type": "background",
    "style": {
      "background-color": "@land",
      "transition-background-color": {
        "duration": 500,
        "delay": 0
      }
    }
  }, {
    "id": "park",
    "source": "mapbox.mapbox-streets-v5",
    "source-layer": "landuse",
    "filter": { "class": "park" },
    "type": "fill",
    "style": {
      "fill-color": "@park"
    }
  }, {
    "id": "water",
    "source": "mapbox.mapbox-streets-v5",
    "source-layer": "water",
    "type": "fill",
    "style": {
      "fill-color": "#999"
    }
  }, {
    "id": "roads",
    "layers": [{
      "id": "road",
      "source": "mapbox.mapbox-streets-v5",
      "source-layer": "road",
      "type": "line",
      "render": {
        "line-cap": "round",
        "line-join": "bevel"
      },
      "style": {
        "line-color": "@road",
        "line-blur": "@road_blur",
        "line-width": {
          "fn": "exponential",
          "z": 10,
          "val": -1,
          "slope": 0.2,
          "min": 1
        }
      }
    }],
    "style": {
      "composite-opacity": 1,
      "transition-composite-opacity": {
        "duration": 500,
        "delay": 0
      }
    },
    "type": "composite"
  }, {
    "id": "building",
    "source": "mapbox.mapbox-streets-v5",
    "source-layer": "building",
    "type": "fill",
    "style": {
      "fill-color": "@building",
      "transition-fill-opacity": {
        "duration": 500,
        "delay": 500
      },
      "fill-opacity": {
        "fn": "linear",
        "z": 14,
        "val": 0,
        "slope": 1,
        "min": 0,
        "max": 1
      },
      "fill-outline-color": "@building_outline"
    }
  }, {
    "id": "borders",
    "source": "mapbox.mapbox-streets-v5",
    "source-layer": "admin",
    "type": "line",
    "style": {
      "line-color": "rgba(0,0,0,0.3)",
      "line-width": 1
    }
  }, {
    "id": "poi",
    "source": "mapbox.mapbox-streets-v5",
    "source-layer": "poi_label",
    "type": "symbol",
    "render": {
      "icon-size": 12,
      "symbol-rotation-alignment": "viewport"
    }
  }, {
    "id": "country_label",
    "source": "mapbox.mapbox-streets-v5",
    "source-layer": "country_label",
    "filter": { "$type": "point" },
    "type": "symbol",
    "render": {
      "text-field": "{name}",
      "text-font": "Open Sans Regular, Arial Unicode MS Regular",
      "text-max-size": 16,
      "text-padding": 10
    },
    "style": {
      "text-halo-color": "rgba(255,255,255,0.7)",
      "text-halo-width": "@stroke_width",
      "text-color": "@text"
    }
  }, {
    "id": "road_label",
    "source": "mapbox.mapbox-streets-v5",
    "source-layer": "road_label",
    "filter": { "$type": "line" },
    "type": "symbol",
    "render": {
      "text-field": "{name}",
      "text-font": "Open Sans Regular, Arial Unicode MS Regular",
      "text-max-size": 12,
      "text-max-angle": 1.04,
      "symbol-min-distance": 250
    },
    "style": {
      "text-color": "@text",
      "text-halo-color": "rgba(255,255,255,0.7)",
      "text-halo-width": "@stroke_width",
      "text-size": {
        "fn": "exponential",
        "z": 14,
        "val": 8,
        "slope": 1,
        "min": 8,
        "max": 12
      }
    }
  }]
}
