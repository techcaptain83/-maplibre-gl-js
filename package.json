{
  "name": "llmr-gl",
  "description": "A WebGL interactive maps library",
  "version": "0.0.1",
  "main": "js/llmr.js",
  "dependencies": {
    "geojson-rewind": "~0.1.0",
    "rbush": "~1.3.2",
    "pbf": "0.0.1",
    "unitbezier": "0.0.0",
    "queue-async": "^1.0.7"
  },
  "devDependencies": {
    "benchmark": "~1.0.0",
    "browserify": "~4.1.8",
    "spritesmith": "~0.19.2",
    "uglify-js": "~2.4.13",
    "glify": "^0.3.0",
    "tape": "~2.13.2",
    "watchify": "~0.10.2",
    "jshint": "^2.5.1",
    "hintify": "^0.1.0"
  },
  "browserify": {
    "transform": [
      "hintify",
      "glify"
    ]
  },
  "scripts": {
    "test": "tape test/*.js",
    "watch": "watchify -v -d js/llmr.js -o dist/llmr-dev.js",
    "build": "browserify -d js/llmr.js > dist/llmr-dev.js",
    "production": "browserify -i js/render/draw{vertices,debug}.js -d js/llmr.js | uglifyjs -c drop_console=true > dist/llmr.js",
    "prepublish": "mkdir -p dist && npm run build && npm run production"
  },
  "testling": {
    "files": "test/*.js",
    "browsers": [
      "chrome/22..latest",
      "firefox/16..latest",
      "safari/latest"
    ]
  }
}
