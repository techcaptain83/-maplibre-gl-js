{
  "name": "llmr-gl",
  "description": "A WebGL interactive maps library",
  "version": "0.0.1",
  "main": "js/llmr.js",
  "dependencies": {
    "geojson-rewind": "~0.1.0",
    "rbush": "~1.3.2",
    "pbf": "0.0.1",
    "unitbezier": "0.0.0"
  },
  "devDependencies": {
    "browserify": "~3.24.11",
    "spritesmith": "~0.17.4",
    "uglify-js": "~2.4.12",
    "beefy": "https://github.com/chrisdickinson/beefy/archive/beefy-two.tar.gz",
    "glify": "^0.2.0",
    "tape": "~2.12.1",
    "watchify": "~0.8.3",
    "jshint": "^2.5.0"
  },
  "browserify": {
    "transform": [
      "glify"
    ]
  },
  "scripts": {
    "test": "tape test/*.js",
    "start": "beefy -t glify debug/site.js -d",
    "watch": "watchify -v -d js/llmr.js -o dist/llmr-dev.js",
    "browserify-dev": "browserify -d js/llmr.js > dist/llmr-dev.js",
    "browserify-prod": "browserify -i js/render/draw{vertices,debug}.js -d js/llmr.js | uglifyjs -c drop_console=true > dist/llmr.js",
    "build": "mkdir -p dist && jshint js && npm run browserify-dev",
    "production": "mkdir -p dist && jshint js && npm run browserify-prod",
    "prepublish": "npm run build && npm run production"
  },
  "testling": {
    "files": "test/*.js",
    "browsers": [
      "chrome/22..latest",
      "firefox/16..latest",
      "safari/latest"
    ]
  }
}
